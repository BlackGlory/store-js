{
  "name": "@blackglory/store-js",
  "version": "0.17.1",
  "description": "",
  "keywords": [],
  "files": [
    "lib",
    "src"
  ],
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "browser": {
    "./lib/utils/rpc-client.js": "./lib/utils/rpc-client.browser.js"
  },
  "repository": "git@github.com:BlackGlory/store-js.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "prepare": "ts-patch install -s",
    "lint": "eslint --quiet src __tests__",
    "test": "vitest --run",
    "prepublishOnly": "run-s prepare clean build",
    "clean": "rimraf lib",
    "build": "tsc --project tsconfig.build.json",
    "docker:test": "run-s docker:test:clean docker:test:build docker:test:run docker:test:clean",
    "docker:coverage": "run-s docker:test:clean docker:test:build docker:test:coverage docker:test:clean",
    "docker:test:build": "docker compose --project-name store-js --file docker-compose.test.yml build",
    "docker:test:run": "docker compose --project-name store-js --file docker-compose.test.yml run --no-TTY --rm test",
    "docker:test:clean": "docker compose --project-name store-js --file docker-compose.test.yml down",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare lint build docker:test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@types/ws": "^8.18.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "extra-utils": "^5.19.0",
    "husky": "4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "standard-version": "^9.3.2",
    "ts-patch": "^3.3.0",
    "tslib": "^2.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.38.0",
    "typescript-transform-paths": "^3.5.5",
    "vite": "^7.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@blackglory/errors": "^3.0.3",
    "@blackglory/prelude": "^0.4.0",
    "@delight-rpc/extra-native-websocket": "^0.6.1",
    "@delight-rpc/extra-websocket": "^0.7.1",
    "delight-rpc": "^6.1.2",
    "extra-abort": "^0.4.0",
    "extra-native-websocket": "^0.5.0",
    "extra-websocket": "^0.5.0",
    "justypes": "^4.4.1",
    "ws": "^8.18.3"
  }
}
